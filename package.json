{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.0.0-semantic-release",
  "license": "BSD-2-Clause",
  "template": {
    "usedBy": [
      "arlac77/npm-package-template",
      "arlac77/npm-package-template-esm",
      "arlac77/npm-package-template-svelte-app"
    ],
    "files": [
      {
        "merger": "Package",
        "pattern": "**/package.json",
        "options": {
          "keywords": {
            "auth-provider": "auth-provider",
            "repository-provider.+": "repository-provider",
            "^kronos-interceptor.+": "kronos-interceptor",
            "^kronos-service-(?!manager)": "kronos-service"
          }
        }
      },
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "npm",
              "icon": "https://img.shields.io/npm/v/{{name}}.svg",
              "url": "https://www.npmjs.com/package/{{name}}"
            },
            {
              "name": "License",
              "icon": "https://img.shields.io/badge/License-BSD%203--Clause-blue.svg",
              "url": "https://opensource.org/licenses/BSD-3-Clause"
            },
            {
              "name": "install size",
              "icon": "https://packagephobia.now.sh/badge?p={{name}}/@{{version}}",
              "url": "https://packagephobia.now.sh/result?p={{name}}@{{version}}"
            },
            {
              "name": "minified size",
              "icon": "https://badgen.net/bundlephobia/min/{{name}}",
              "url": "https://bundlephobia.com/result?p={{name}}"
            },
            {
              "name": "downloads",
              "icon": "http://img.shields.io/npm/dm/{{name}}.svg?style=flat-square",
              "url": "https://npmjs.org/package/{{name}}"
            },
            {
              "name": "GitHub Issues",
              "icon": "https://img.shields.io/github/issues/{{github.user}}/{{github.repo}}.svg?style=flat-square",
              "url": "https://github.com/{{github.user}}/{{github.repo}}/issues"
            }
          ]
        }
      },
      {
        "merger": "License",
        "pattern": "LICENSE"
      },
      {
        "merger": "MergeAndRemoveLineSet",
        "pattern": ".gitignore",
        "options": {
          "message": "chore(git): update {{entry.name}} from template"
        }
      },
      {
        "merger": "MergeAndRemoveLineSet",
        "pattern": ".npmignore",
        "options": {
          "message": "chore(npm): update {{entry.name}} from template"
        }
      },
      {
        "merger": "ReplaceIfEmpty",
        "pattern": "**/*"
      }
    ]
  }
}
