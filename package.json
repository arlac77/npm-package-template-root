{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.0.0-semantic-release",
  "license": "BSD-2-Clause",
  "template": {
    "usedBy": [
      "arlac77/template-cli-app",
      "arlac77/template-esm",
      "arlac77/template-web-app",
      "arlac77/template-kronos-app",
      "arlac77/template-kronos-module"
    ],
    "properties": {
      "node_version" : "12.16.3"
    },
    "mergers": [
      {
        "type": "Package",
        "pattern": "**/package.json",
        "options": {
          "keywords": {
            "auth-provider": "auth-provider",
            "repository-provider.+": "repository-provider",
            "interceptor.+": "kronos-interceptor",
            "service-": "kronos-service"
          }
        }
      },
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "npm",
              "icon": "https://img.shields.io/npm/v/{{name}}.svg",
              "url": "https://www.npmjs.com/package/{{name}}",
              "order": 0.1
            },
            {
              "name": "License",
              "icon": "https://img.shields.io/badge/License-BSD%203--Clause-blue.svg",
              "url": "https://opensource.org/licenses/BSD-3-Clause",
              "order": 0.11
            },
            {
              "name": "install size",
              "icon": "https://packagephobia.now.sh/badge?p={{name}}/@{{version}}",
              "url": "https://packagephobia.now.sh/result?p={{name}}@{{version}}",
              "order": 0.12
            },
            {
              "name": "minified size",
              "icon": "https://badgen.net/bundlephobia/min/{{name}}",
              "url": "https://bundlephobia.com/result?p={{name}}",
              "order": 0.13
            },
            {
              "name": "downloads",
              "icon": "http://img.shields.io/npm/dm/{{name}}.svg?style=flat-square",
              "url": "https://npmjs.org/package/{{name}}",
              "order": 0.14
            }
          ]
        }
      },
      {
        "type": "License",
        "pattern": "LICENSE"
      },
      {
        "type": "MergeLineSet",
        "pattern": ".gitignore",
        "options": {
          "messagePrefix": "chore(git): ",
          "defaultIgnore": [
            ""
          ]
        }
      },
      {
        "type": "MergeLineSet",
        "pattern": ".npmignore",
        "options": {
          "messagePrefix": "chore(npm): ",
          "defaultIgnore": [
            "",
            ".*.swp",
            "._*",
            ".DS_Store",
            ".git",
            ".hg",
            ".npmrc",
            ".lock-wscript",
            ".svn",
            ".wafpickle-*",
            "config.gypi",
            "CVS",
            "npm-debug.log"
          ]
        }
      },
      {
        "type": "ReplaceIfEmpty",
        "pattern": "**/*"
      }
    ]
  }
}
